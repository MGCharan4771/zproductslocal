<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog title="Product Id Dialog" contentHeight="30%" contentWidth="40%">
        <Table items="{/aProducts}" sticky="ColumnHeaders">
            <columns>
                <Column>
                    <Text text="Product ID"></Text>
                </Column>
                <Column>
                    <Text text="Product Name"></Text>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Active" press="onPressRow" >
                    <cells>
                        <Text text="{prdid}" />
                        <Text text="{prdname}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <endButton>
            <Button text="Close" press="onPressPrdidClose"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>