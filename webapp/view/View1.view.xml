<mvc:View xmlns:fb="sap.ui.comp.filterbar" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" 
controllerName="zproductslocal.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <f:DynamicPage >
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <Title text="Product Management"></Title>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader >
                <f:content>
                    <fb:FilterBar search="onPressSearch" >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem name="Product ID" label="Product ID" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idprdid" required="true" showValueHelp="true" valueHelpRequest="onPrdIdVH" ></Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Product Name" label="Product Name" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <Input id="idprdname" showValueHelp="true" valueHelpRequest="onPrdNameVH" ></Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Product Price" label="Product Price" groupName="Group1" >
                                <fb:control>
                                    <Input id="idprdprice"></Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Product Status" label="Product Status" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox id="idstatus" items="{/aProducts}">
                                        <core:Item text="{prdstatus}"></core:Item>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="idProductsTable" items="{/aProducts}">
                <headerToolbar>
                    <OverflowToolbar >
                        <Title text="Products Details"></Title>
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button text="Add" icon="sap-icon://add" iconFirst="false" type="Emphasized" press="onPressAdd"></Button>
                        <Button text="Nav to View2" type="Emphasized" press="onPressNavView2"></Button>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Product ID"></Text>
                    </Column>
                    <Column>
                        <Text text="Product Name"></Text>
                    </Column>
                    <Column>
                        <Text text="Product Price"></Text>
                    </Column>
                    <Column>
                        <Text text="Product Status"></Text>
                    </Column>
                    <Column width="5%">
                        <Text text="Delete"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <cells>
                            <Input value="{prdid}" />
                            <Input value="{prdname}"/>
                            <Input value="{prdprice}" />
                            <Input value="{prdstatus}"/>
                            <Button icon="sap-icon://delete" type="Reject" press="onPressDelete"></Button>
                            <!-- <Text text="{prdid}" />
                            <ObjectStatus text="{prdname}" 
                                state="{=${prdprice} > 15000 ? 'Error' : 'Information'}" />
                            <Text text="{path: 'prdprice', formatter : '.formatPrice'}" />
                            <ObjectStatus text="{prdstatus}" 
                                state="{path:'prdstatus', formatter: '.formatPrdstatus'}"/> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>

